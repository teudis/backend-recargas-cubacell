<link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
<row>
    <div class="well col-md-12">
        <form asp-action="searchbalancetuneresult" asp-controller="recarga" asp-area="account" method="post">
            <div class="form-group">
                <div class="col-sm-2">
                    <input type="datetime" name="FechaInicio" id="FechaInicio" value="" class="form-control" placeholder=" Fecha Inicio" />
                </div>
                <div class="col-sm-2">
                    <input type="datetime" name="FechaFin" id="FechaFin" value="" class="form-control" placeholder=" Fecha Fin" />
                </div>
                <label class="col-sm-1 control-label">Perfil de Recarga</label>
                <div class="col-sm-3">
                    <select name="perfilrecarga" class="form-control" id="perfilrecarga">
                        <option value="0">Seleccionar Perfil</option>
                        <option value="cubacel">Cubacel</option>
                        <option value="nauta">Nauta</option>
                    </select>
                </div>


                <div id="emailtarget" class="form-group col-sm-4">
                    <input type="text" name="EmailTarget" value="" class="form-control" placeholder="correo nauta" />
                </div>

                <div id="phonetarget" class="form-group col-sm-4">
                    <input type="text" name="PhoneTarget" value="" class="form-control" placeholder="celular cubacel" />
                </div>

                <div class="form-group col-sm-12">
                    <input type="submit" name="name" value="Buscar" class="btn btn-primary" />
                </div>
            </div>
            <div class="form-group">
            </div>
        </form>
    </div>
</row>