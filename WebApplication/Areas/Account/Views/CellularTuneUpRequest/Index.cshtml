@model SSC.CustomSolution.CubansConexion.TuneUpResell.WebApplication.Helpers.Pagination.PaginatedList<SSC.CustomSolution.CubansConexion.TuneUpResell.WebApplication.Data.Persistence.Entities.CellularBalanceTuneUpRequest>

@{
    ViewData["Title"] = "Recargas Cubacel Pendientes";
}

<section id="mainrender">
    <div class="container">
        <h3>Recargas Cubacel Pendientes</h3>

        <div class="tabla-container">
            <div class="row tabla-row-header">
                <div class="col-md-4 tabla-col">
                    <div class="col-texto-header">
                        Tel&eacute;fono
                    </div>
                </div>
                <div class="col-md-2 tabla-col">
                    <div class="col-texto-header">
                        Perfil
                    </div>
                </div>
                <div class="col-md-2 tabla-col">
                    <div class="col-texto-header">
                        Fecha
                    </div>
                </div>
                <div class="col-md-4 tabla-col">
                    <div class="col-texto-header">
                        Realizada por
                    </div>
                </div>
            </div>

            @if (Model.Count() == 0)
            {
                <div class="row tabla-row">
                    <div class="col-md-4 tabla-col">
                        <div class="col-titulo">
                            Tel&eacute;fono
                        </div>
                        <div class="col-texto">
                            Sin elementos que mostrar.
                        </div>
                    </div>
                    <div class="col-md-2 tabla-col">
                        <div class="col-titulo">
                            Perfil
                        </div>
                        <div class="col-texto">
                            ( ... )
                        </div>
                    </div>
                    <div class="col-md-2 tabla-col">
                        <div class="col-titulo">
                            Fecha
                        </div>
                        <div class="col-texto">
                            ( ... )
                        </div>
                    </div>
                    <div class="col-md-4 tabla-col">
                        <div class="col-titulo">
                            Realizada por
                        </div>
                        <div class="col-texto">
                            ( ... )
                        </div>
                    </div>
                </div>

            }
            else
            {

                @foreach (var item in Model)
                {
                    <div class="row tabla-row">
                        <div class="col-md-4 tabla-col">
                            <div class="col-titulo">
                                Tel&eacute;fono
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.PhoneNumberTarget)
                            </div>
                        </div>
                        <div class="col-md-2 tabla-col">
                            <div class="col-titulo">
                                Perfil
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.TuneUpProfile.Label)
                            </div>
                        </div>
                        <div class="col-md-2 tabla-col">
                            <div class="col-titulo">
                                Fecha
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.Requested)
                            </div>
                        </div>
                        <div class="col-md-4 tabla-col">
                            <div class="col-titulo">
                                Realizada por
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.Agent.FullName)
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        @if (Model.Count() > 20)
        {

            <a asp-action="Index"
               asp-route-sortOrder="@ViewData[" CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-default @prevDisabled">
                Anterior
            </a>
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData[" CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-default @nextDisabled">
                Siguiente
            </a>
        }
    </div>
</section>
