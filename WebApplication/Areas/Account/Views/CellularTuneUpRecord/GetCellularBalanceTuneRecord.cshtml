@model IEnumerable<SSC.CustomSolution.CubansConexion.TuneUpResell.WebApplication.Data.Persistence.Entities.CellularBalanceTuneUpRecord>

@{
    ViewData["Title"] = "Recargas Cubacel Realizadas";
}


<section id="mainrender">
    <div class="container">
        <h3>Recargas Cubacel Realizadas</h3>

        <div class="tabla-container">
            <div class="row tabla-row-header">
                <div class="col-md-4 tabla-col">
                    <div class="col-texto-header">
                        Tel&eacute;fono
                    </div>
                </div>
                <div class="col-md-2 tabla-col">
                    <div class="col-texto-header">
                        Monto
                    </div>
                </div>
                <div class="col-md-2 tabla-col">
                    <div class="col-texto-header">
                        Fecha
                    </div>
                </div>
                <div class="col-md-4 tabla-col">
                    <div class="col-texto-header">
                        Realizada por
                    </div>
                </div>
            </div>

            @if (Model.Count() == 0)
            {
                <div class="row tabla-row">
                    <div class="col-md-4 tabla-col">
                        <div class="col-titulo">
                            Tel&eacute;fono
                        </div>
                        <div class="col-texto">
                            Sin elementos que mostrar.
                        </div>
                    </div>
                    <div class="col-md-2 tabla-col">
                        <div class="col-titulo">
                            Monto
                        </div>
                        <div class="col-texto">
                            ( ... )
                        </div>
                    </div>
                    <div class="col-md-2 tabla-col">
                        <div class="col-titulo">
                            Fecha
                        </div>
                        <div class="col-texto">
                            ( ... )
                        </div>
                    </div>
                    <div class="col-md-4 tabla-col">
                        <div class="col-titulo">
                            Realizada por
                        </div>
                        <div class="col-texto">
                            ( ... )
                        </div>
                    </div>
                </div>

            }
            else
            {

                @foreach (var item in Model)
                {
                    <div class="row tabla-row">
                        <div class="col-md-4 tabla-col">
                            <div class="col-titulo">
                                Tel&eacute;fono
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.PhoneNumberTarget)
                            </div>
                        </div>
                        <div class="col-md-2 tabla-col">
                            <div class="col-titulo">
                                Monto
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.Amount)
                            </div>
                        </div>
                        <div class="col-md-2 tabla-col">
                            <div class="col-titulo">
                                Fecha
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.Created)
                            </div>
                        </div>
                        <div class="col-md-4 tabla-col">
                            <div class="col-titulo">
                                Realizada por
                            </div>
                            <div class="col-texto">
                                @Html.DisplayFor(modelItem => item.Agent.FullName)
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

    </div>
</section>